{
  "name": "astro-sandbox",
  "type": "module",
  "version": "0.0.1",
  "author": "suzuki-hideshi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/suzuki-hideshi/astro-sandbox/issues"
  },
  "homepage": "https://github.com/suzuki-hideshi/astro-sandbox#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suzuki-hideshi/astro-sandbox.git"
  },
  "engines": {
    "node": "^20.10.0",
    "npm": "^10.2.3"
  },
  "scripts": {
    "dev": "run-s clean dev:copy build:img dev:svg && run-p dev:astro \"watch:*\"",
    "dev:astro": "astro dev",
    "dev:copy": "node tasks/static-copy.mjs",
    "dev:svg": "node tasks/svg-sprite.mjs",
    "watch:img": "onchange \"src/assets/images/**\" -- node tasks/image-min.mjs \"{{changed}}\"",
    "watch:copy": "onchange \"static/**\" -- node tasks/static-copy.mjs \"{{changed}}\"",
    "watch:svg": "onchange \"src/assets/svg-sprite/*.svg\" -- node tasks/svg-sprite.mjs \"{{changed}}\"",
    "stg": "astro check && tsc --noEmit && run-s clean build:copy build:img build:svg build:astro stg:vite beautify:html",
    "stg:vite": "cross-env BUILD_BY=vite vite build --mode staging",
    "build": "astro check && tsc --noEmit && run-s clean build:copy build:img build:svg build:astro build:vite beautify:html",
    "build:astro": "astro build",
    "build:vite": "cross-env BUILD_BY=vite vite build",
    "build:img": "cross-env NODE_ENV=production node tasks/image-min.mjs",
    "build:copy": "cross-env NODE_ENV=production node tasks/static-copy.mjs",
    "build:svg": "cross-env NODE_ENV=production node tasks/svg-sprite.mjs",
    "beautify:html": "node tasks/html-prettify.mjs",
    "w3c": "node tasks/validate-html.mjs",
    "preview": "astro preview",
    "fix": "run-p \"fix:*\"",
    "fix:eslint": "eslint -c .eslintrc.cjs \"./src/**/*.{ts,tsx,astro,vue}\" --fix",
    "fix:stylelint": "stylelint --config .stylelintrc.cjs \"./src/**/*.{scss,css,vue}\" --fix --aei",
    "fix:config": "eslint -c .eslintrc.cjs \"./*.{js,cjs,mjs,ts}\" --fix --ignore-pattern \"!.*rc.cjs\" --no-error-on-unmatched-pattern && prettier --write --no-error-on-unmatched-pattern ./*.{js,cjs,mjs,ts}",
    "fix:prettier": "prettier --write --no-error-on-unmatched-pattern \"./**/*.{js,jsx,cjs,mjs,ts,tsx,vue,astro,scss,css}\"",
    "clean": "node tasks/clean-up.mjs",
    "lint-staged": "lint-staged",
    "plop": "plop",
    "prepare": "husky install"
  },
  "dependencies": {
    "@astrojs/check": "^0.3.4",
    "astro": "^4.0.9",
    "destyle.css": "^4.0.0",
    "lodash-es": "^4.17.21",
    "sass": "^1.69.7",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^5.1.0",
    "@tweakpane/core": "^2.0.3",
    "@tweakpane/plugin-essentials": "^0.2.1",
    "@types/image-size": "^0.8.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-astro": "^0.31.0",
    "eslint-plugin-import": "^2.29.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "html-validator": "^6.0.1",
    "husky": "^8.0.3",
    "image-size": "^1.1.1",
    "js-beautify": "^1.14.11",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "picocolors": "^1.0.0",
    "plop": "^4.0.1",
    "postcss": "^8.4.32",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.1.1",
    "prettier-plugin-astro": "^0.12.3",
    "pretty-bytes": "^6.1.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "sharp": "^0.33.1",
    "stylelint": "^16.1.0",
    "stylelint-config-recess-order": "^4.4.0",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-prettier": "^5.0.0",
    "stylelint-scss": "^6.0.0",
    "svgo": "^3.2.0",
    "svgstore": "^3.0.1",
    "terser": "^5.26.0",
    "tweakpane": "^4.0.3"
  }
}
