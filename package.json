{
  "name": "astro-sandbox",
  "type": "module",
  "version": "0.0.1",
  "author": "xx-suzuki",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xx-suzuki/astro-sandbox/issues"
  },
  "homepage": "https://github.com/xx-suzuki/astro-sandbox#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xx-suzuki/astro-sandbox.git"
  },
  "engines": {
    "node": "^20.15.0",
    "npm": "^10.7.0"
  },
  "scripts": {
    "dev": "run-s clean plop:scss dev:copy build:img dev:svg && run-p dev:astro \"watch:*\"",
    "dev:astro": "astro dev",
    "dev:copy": "cross-env NODE_ENV=development node tasks/static-copy.mjs",
    "dev:svg": "cross-env NODE_ENV=development node tasks/svg-sprite.mjs",
    "watch:img": "onchange \"src/assets/images/**\" -- node tasks/image-min.mjs \"{{changed}}\"",
    "watch:copy": "onchange \"static/**\" -- node tasks/static-copy.mjs \"{{changed}}\"",
    "watch:svg": "onchange \"src/assets/svg-sprite/*.svg\" -- node tasks/svg-sprite.mjs \"{{changed}}\"",
    "stg": "astro check && tsc --noEmit && run-s clean build:copy build:img build:svg build:astro stg:vite beautify:html",
    "stg:vite": "cross-env BUILD_BY=vite vite build --mode staging",
    "build": "astro check && tsc --noEmit && run-s clean plop:scss build:copy build:img build:svg build:astro build:vite beautify:html",
    "build:astro": "astro build",
    "build:vite": "cross-env BUILD_BY=vite vite build",
    "build:img": "cross-env NODE_ENV=production node tasks/image-min.mjs",
    "build:copy": "cross-env NODE_ENV=production node tasks/static-copy.mjs",
    "build:svg": "cross-env NODE_ENV=production node tasks/svg-sprite.mjs",
    "beautify:html": "node tasks/html-prettify.mjs",
    "w3c": "node tasks/validate-html.mjs",
    "preview": "astro preview",
    "fix": "run-p \"fix:*\"",
    "fix:eslint": "eslint -c eslint.config.mjs \"./src/**/*.{ts,tsx,astro,vue}\" --fix",
    "fix:stylelint": "stylelint --config .stylelintrc.cjs \"./src/**/*.{scss,css,vue}\" --fix --aei",
    "fix:config": "eslint -c eslint.config.mjs \"./*.{js,cjs,mjs,ts}\" --fix --ignore-pattern \"!.*rc.cjs\" --no-error-on-unmatched-pattern && prettier --write --no-error-on-unmatched-pattern ./*.{js,cjs,mjs,ts}",
    "fix:prettier": "prettier --write --no-error-on-unmatched-pattern \"./**/*.{js,jsx,cjs,mjs,ts,tsx,vue,astro,scss,css}\"",
    "clean": "node tasks/clean-up.mjs",
    "lint-staged": "lint-staged",
    "plop": "plop",
    "plop:scss": "plop scss",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.3",
    "astro": "^4.15.1",
    "destyle.css": "^4.0.1",
    "lodash-es": "^4.17.21",
    "sass": "^1.77.8",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^5.1.0",
    "@tweakpane/core": "^2.0.4",
    "@tweakpane/plugin-essentials": "^0.2.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.5.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "astro-eslint-parser": "^1.0.2",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-astro": "^1.2.3",
    "eslint-plugin-import": "^2.29.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "globals": "^15.9.0",
    "html-validator": "^6.0.1",
    "husky": "^9.1.5",
    "image-size": "^1.1.1",
    "js-beautify": "^1.15.1",
    "lint-staged": "^15.2.9",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "picocolors": "^1.0.1",
    "plop": "^4.0.1",
    "postcss": "^8.4.41",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "pretty-bytes": "^6.1.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "sharp": "^0.33.5",
    "stylelint": "^16.9.0",
    "stylelint-config-recess-order": "^5.1.0",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-prettier": "^5.0.2",
    "stylelint-scss": "^6.5.1",
    "svgo": "^3.3.2",
    "svgstore": "^3.0.1",
    "terser": "^5.31.6",
    "tweakpane": "^4.0.4",
    "typescript-eslint": "^8.3.0",
    "vite-tsconfig-paths": "^5.0.1"
  }
}
