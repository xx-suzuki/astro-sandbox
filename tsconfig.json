{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"],
      "@root/*": ["./*"]
    },
  },
  "exclude": ["dist", "node_modules", ".tmp", "static"]
}
